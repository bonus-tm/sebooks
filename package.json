{
  "name": "sebooks",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "getbooks": "node load-books.cjs"
  },
  "dependencies": {
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "vue": "^3.2.45",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",
    "vite": "^4.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "plugin:vue/strongly-recommended",
      "plugin:vue/recommended",
      "@vue/standard"
    ],
    "rules": {
      "object-curly-spacing": "off",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3
        }
      ],
      "vue/no-v-html": "off",
      "prefer-const": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
